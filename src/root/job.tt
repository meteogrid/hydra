[% WRAPPER layout.tt title="Job $resource.get_column('project'):$resource.get_column('jobset'):$resource.name" %]
[% PROCESS common.tt %]
[% hideProjectName=1 hideJobsetName=1 hideJobName=1 %]

<ul class="nav nav-tabs">
  <li class="active"><a href="#tabs-status" data-toggle="tab">Status</a></li>
  <li><a href="#tabs-links" data-toggle="tab">Links</a></li>
</ul>

<div id="generic-tabs" class="tab-content">

  <div id="tabs-status" class="tab-pane active">
    [% IF lastBuilds.size != 0 %]
      <h3>Lastest builds</h3>
      [% INCLUDE renderBuildList builds=lastBuilds showStatusChange=0
          linkToAll=c.uri_for('/job' resource.get_column('project') resource.get_column('jobset') resource.name 'all') %]
    [% END %]
    [% IF queuedBuilds.size != 0 %]
      <h3>Queued builds</h3>
      [% INCLUDE renderBuildList builds=queuedBuilds showSchedulingInfo=1 hideResultInfo=1 %]
    [% END %]
  </div>

  <div id="tabs-links" class="tab-pane">
    <ul>
      <li><a href="[% c.uri_for('/job' resource.get_column('project') resource.get_column('jobset') resource.name 'latest') %]">Latest successful build</a></li>
      [% FOREACH system IN systems %]
        <li><a href="[% c.uri_for('/job' resource.get_column('project') resource.get_column('jobset') resource.name 'latest-for' system.system) %]">Latest successful build for <tt>[% system.system %]</tt></a></li>
      [% END %]
    </ul>
  </div>

</div>

[% END %]
