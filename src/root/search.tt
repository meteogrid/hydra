[% WRAPPER layout.tt title="Search results" %]
[% PROCESS common.tt %]

[% IF resource.projects.size > 0; matched = 1 %]

  <p>The following projects match your query:</p>

  <table class="table table-striped table-condensed clickable-rows">
    <thead>
      <tr><th>Project</th><th>Description</th></tr>
    </thead>
    <tbody>
      [% FOREACH p IN resource.projects %]
        <tr>
          <td><span class="[% IF !p.enabled %]disabled-project[% END %]">[% INCLUDE renderProjectName project=p.name inRow=1 %]</span></td>
          <td>[% HTML.escape(p.description) %]</td>
        </tr>
      [% END %]
    </tbody>
  </table>

[% END %]

[% IF resource.jobsets.size > 0; matched = 1 %]

  <p>The following jobsets match your query:</p>

  <table class="table table-striped table-condensed clickable-rows">
    <thead>
      <tr><th>Jobset</th><th>Description</th></tr>
    </thead>
    <tbody>
      [% FOREACH j IN resource.jobsets %]
        <tr>
          <td><span class="[% IF !j.enabled %]disabled-jobset[% END %]">[% INCLUDE renderFullJobsetName project=j.get_column('project') jobset=j.name inRow=1 %]</span></td>
          <td>[% HTML.escape(j.description) %]</td>
        </tr>
      [% END %]
    </tbody>
  </table>

[% END %]

[% IF resource.jobs.size > 0; matched = 1 %]

  <p>The following jobs match your query:[% IF resource.jobs.size > limit %] <span class="text-warning">(first [% limit %] results only)</span>[% END %]</p>

  <table class="table table-striped table-condensed clickable-rows">
    <thead>
      <tr><th>Job</th></tr>
    </thead>
    <tbody>
      [% FOREACH j IN resource.jobs %]
        <tr>
          <td><span class="[% IF !j.get_column('enabled') %]disabled-job[% END %]">[% INCLUDE renderFullJobName project=j.project jobset=j.jobset job=j.name inRow=1 %]</span></td>
        </tr>
      [% END %]
    </tbody>
  </table>

[% END %]

[% IF !matched %]
  <div class="alert alert-warn">Sorry! Nothing matches your
  query.</div>
[% END %]

[% END %]
